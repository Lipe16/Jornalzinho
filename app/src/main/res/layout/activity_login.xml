<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/megafone"
    tools:context="ferreira.filipe.jornaldeofertas.LoginActivity"
    android:weightSum="1">

    <EditText
        android:id="@+id/editTextEmailLogin"
        android:hint="E-mail"
        android:textColorHint="#ece8e8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/editTextSenhaLogin"
        android:hint="Senha"
        android:textColorHint="#ece8e8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:inputType="textPassword" />


    <ProgressBar
        android:id="@+id/progressBarLogin"
        style="?android:attr/progressBarStyle"
        android:layout_width="73dp"
        android:layout_height="60dp"
        android:visibility="invisible" />

    <Button
        android:id="@+id/btnLoginEntrar"
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:background="#4DFBFBFB"
        android:elevation="24dp"

        android:shadowColor="#d1fcafb9"
        android:text="confirma"
        android:textColor="#D10A14A6"
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_weight="0.01" />




</LinearLayout>
