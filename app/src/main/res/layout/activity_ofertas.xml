<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fundo">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="4">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="26dp"
            android:layout_columnSpan="2"
            android:background="#9D000000"
            android:elevation="24dp">

            <TextView
                android:id="@+id/textViewEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:fontFamily="sans-serif"
                android:text="teste@teste.com"
                android:textColor="#FFFFFFFF"
                android:textSize="13sp" />

            <ProgressBar
                android:id="@+id/progressBarCategoria"
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="26dp"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/textViewEmail"
                android:layout_toEndOf="@+id/textViewEmail" />

            <Button
                android:id="@+id/btnSair"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/botao_redondo_shape"
                android:elevation="24dp"
                android:fontFamily="sans-serif"
                android:text="Sair"
                android:textColor="#FFFFFFFF"
                android:textColorLink="#FFFFFFFF"
                android:textSize="14sp" />


        </RelativeLayout>

        <RelativeLayout android:layout_columnSpan="2">

            <TextView
                android:id="@+id/textViewTitulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#79EFEFEF"
                android:elevation="24dp"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:text="Categorias"
                android:textColor="#000000"
                android:textSize="24sp" />

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_columnSpan="2"
            android:layout_margin="2dp"
            android:background="#67FFFFFF"
            android:elevation="10dp"
            android:padding="5dp">

            <Spinner
                android:id="@+id/spinnerCategoria"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:padding="0dp">

            </Spinner>


            <ProgressBar
                android:id="@+id/progressBarOfertas"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/spinnerCategoria"
                android:layout_margin="5dp"
                android:visibility="invisible" />
        </RelativeLayout>

        <ListView
            android:id="@+id/listViewProdutos"
            android:layout_width="match_parent"
            android:layout_height="360dp">

        </ListView>

    </GridLayout>


</LinearLayout>