<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="2"
        android:rowCount="4">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="26dp"
            android:layout_columnSpan="2"
            android:background="#9D000000"
            android:elevation="24dp">

            <TextView
                android:id="@+id/textViewEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:fontFamily="sans-serif"
                android:text="teste@teste.com"
                android:textColor="#FFFFFFFF"
                android:textSize="13sp" />

            <ProgressBar
                android:id="@+id/progressBarCategoria"
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="26dp"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/textViewEmail"
                android:layout_toRightOf="@+id/textViewEmail"
                android:visibility="invisible" />

            <Button
                android:id="@+id/btnSair"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/botao_redondo_shape"
                android:elevation="24dp"
                android:fontFamily="sans-serif"
                android:text="Sair"
                android:textColor="#FFFFFFFF"
                android:textColorLink="#FFFFFFFF"
                android:textSize="14sp" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_columnSpan="2"
            android:layout_margin="0dp"
            android:background="#40A6A6A6"
            android:elevation="10dp"
            android:padding="2dp">

            <Spinner
                android:id="@+id/spinnerCategoria"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:padding="0dp">

            </Spinner>


            <ProgressBar
                android:id="@+id/progressBarOfertas"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/spinnerCategoria"
                android:layout_margin="5dp"
                android:visibility="invisible" />
        </RelativeLayout>

        <ListView
            android:id="@+id/listViewProdutos"
            android:layout_width="match_parent"
            android:layout_height="310dp"
            android:layout_columnSpan="2"
            android:layout_rowSpan="1">

        </ListView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_columnSpan="2"
            android:layout_rowSpan="1"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="@drawable/botao_redondo_shape"
                android:padding="0dp"
                android:text="1" />

            <Button
                android:id="@+id/btn2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="@drawable/botao_redondo_shape"
                android:padding="2dp"
                android:text="2" />

            <Button
                android:id="@+id/btn3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="@drawable/botao_redondo_shape"
                android:padding="2dp"
                android:text="3" />

        </LinearLayout>

    </GridLayout>


</LinearLayout>